<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login_account_field"}) do |f| %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前",class: "login_account_field1"   %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス",class: "login_account_field1"  %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード",class: "login_account_field1"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
