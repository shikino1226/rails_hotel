<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <th>ホテル名</th>
      <th>情報</th>
      <th>価格</th>
      <th>場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.introduction %></td>
        <td><%= hotel.price %></td>
        <td><%= hotel.address %></td>
        <td><%= link_to '参照', hotel %></td>
        <td><%= link_to '編集', edit_hotel_path(hotel) %></td>
        <td><%= link_to '削除', hotel, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '一覧に戻る', hotels_path %>