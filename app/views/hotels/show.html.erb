<p id="notice"><%= notice %></p>

<div class = "flex-container">
  <div class = "flex-item1">
    <% if @hotel.picture? %>
      <%= image_tag @hotel.picture.url, :size => '600x400'%>
    <% else %>
      <%= image_tag "/assets/deault.jpg", :size => '600x400' %>
    <% end %>
    <div class = "flex-item1_1">
      <div>  
        <% if current_user.avatar? %>
          <%= image_tag current_user.avatar.url, class: "icon_image"%>
        <% else %>
          <%= image_tag "/assets/deault.jpg", class: "icon_image"%>
        <% end %>
      </div>
      <div>
        <p>
          <div class = "name1"><%= @hotel.name %></div>
        </p>
        <p>
          <div class ="address1"><%= @hotel.address %></div>
        </p> 
      </div>
    </div>
    <p>
      <div class = "introduction1"><%= @hotel.introduction %></div>
    </p>
  </div>
  <div class = "flex_item2">
   <div class ="room_price">￥<%= @hotel.price %>/日</div>
    <%= form_with url: new_reservation_path, method: :get, local: true do |f| %>
      <table>
        <tr>
          <th><%= f.label :check_in ,"開始日" %></th>
        </tr>
        <tr>
          <td><%= f.date_field :check_in, class: "date" %></td>
        </tr>
        <tr>
          <th><%= f.label :check_out ,"終了日" %></th>
        </tr>
        <tr>
        <td><%= f.date_field :check_out, class: "date" %></td>
        </tr>
        <tr>
          <th><%= f.label :people ,"人数" %></th>
        </tr>
        <tr>
          <td><%= f.text_field :people, class: "people_field" %></td>
        </tr>
        <%= f.hidden_field :hotel_id, value: @hotel.id %>
        <%= f.hidden_field :user_id, value:current_user.id  %>
        <%= f.hidden_field :price, value: @hotel.price %>
      </table>
      <div>
        <%= f.submit '予約する' %>
      </div>
    <% end %>
  </div>
</div>
<%if @hotel.user_id == current_user.id %>
  <%= link_to '編集', edit_hotel_path(@hotel) %>
  <%= link_to "このルーム情報を削除する", hotel_path, method: :delete, data: {confirm: "本当に削除しますか？" }%>
<% end %>
<%= link_to '戻る', hotels_path %>
