<p id="notice"><%= notice %></p>

<div class = "flex-container">
  <div class = "flex-item1">
    <% if @hotel.picture? %>
      <%= image_tag @hotel.picture.url, :size => '600x400'%>
    <% else %>
      <%= image_tag "/assets/deault.jpg", :size => '600x400' %>
    <% end %>
    
    <p>
     <img src=<%= current_user.avatar %> class = "icon_image">
    </p>

    <p>
      <div class = "name1"><%= @hotel.name %></div>
    </p>

    <p>
      <strong>アピールポイント:</strong>
      <div class = "introduction1"><%= @hotel.introduction %></div>
    </p>

    <p>
      <strong>価格:</strong>
      <div class ="price1"><%= @hotel.price %></div>
    </p>

    <p>
      <strong>場所:</strong>
      <div class ="address1"><%= @hotel.address %></div>
    </p>
    </div>
    <div class = "flex-item2">
    <h3>予約登録</h3>

    <%= form_with url: new_reservation_path, method: :get, local: true do |f| %>
      <table>
        <tr>
          <th><%= f.label :check_in ,"開始日" %></th>
          <td><%= f.date_field :check_in %></td>
        </tr>

        <tr>
          <th><%= f.label :check_out ,"終了日" %></th>
          <td><%= f.date_field :check_out %></td>
        </tr>

        <tr>
          <th><%= f.label :people ,"人数" %></th>
          <td><%= f.text_field :people %></td>
        </tr>
        <%= f.hidden_field :hotel_id, value: @hotel.id %>
        <%= f.hidden_field :user_id, value:current_user.id  %>
        <%= f.hidden_field :price, value: @hotel.price %>
      </table>
      <div>
        <%= f.submit '予約する' %>
      </div>
    <% end %>
  </div>
</div>


<%= link_to '編集', edit_hotel_path(@hotel) %> 
<%= link_to '戻る', hotels_path %>

