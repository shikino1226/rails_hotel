<p id="notice"><%= notice %></p>

<img src="/assets/deault.jpg" alt="">

<h1>ホテル一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>情報</th>
      <th>価格</th>
      <th>場所</th>
      <th>登録者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.introduction %></td>
        <td><%= hotel.price %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.user_id %></td>
        <td><%= link_to '参照', hotel %></td>
        <td><%= link_to '編集', edit_hotel_path(hotel) %></td>
        <td><%= link_to '削除', hotel, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>予約一覧</h3>

<table>
  <thead>
    <tr>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>人数</th>
      <th>合計金額</th>
      <th>ホテルID</th>
      <th>ユーザーID</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.check_in %></td>
        <td><%= reservation.check_out %></td>
        <td><%= reservation.people %></td>
        <td><%= reservation.total_price %></td>
        <td><%= reservation.hotel_id %></td>
        <td><%= reservation.user_id %></td>
        <td><%= link_to "参照", reservation %></td>
        <td><%= link_to "編集", [:edit, reservation] %></td>
        <td><%= link_to "削除", reservation, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
  <%= search_form_for @q, url: search_hotels_path do |f| %>
    <%= f.label :name_or_introduction_or_address_cont, 'フリーワード検索' %>
    <%= f.search_field :name_or_introduction_or_address_cont %>
    <br>
    <%= f.submit '検索' %>
  <% end %>
<br>

