<h1>ホテル一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>情報</th>
      <th>価格</th>
      <th>場所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.introduction %></td>
        <td><%= hotel.price %></td>
        <td><%= hotel.address %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ホテル新規登録', new_hotel_path %>
